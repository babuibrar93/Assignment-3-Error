extends ../layout 

block content 
    .row 
        .col-sm-8
             h1 list of items
        .col-sm-4
                a(href="/Items/add", class="btn btn-primary float-right") Add New Items
    table.table
        thead
            tr
                th Medicine Name
                th Shape
                th Route
                th Retail Price
            
        tbody
            each item in items 
                tr
                    td=item.Name
                    td=item.Shape
                    td=item.Rout
                    td=item.Price
                   
                
